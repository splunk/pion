# libpion configuration file for pkg-config

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
datadir=@datarootdir@

Name: libpion
Description: a C++ framework for building lightweight HTTP interfaces
Version: @VERSION@
#Requires: boost-1.34 boost-asio-0.3.8rc3
Libs: @LDFLAGS@ @BOOST_THREAD_LIB@ @BOOST_SYSTEM_LIB@ @BOOST_FILESYSTEM_LIB@ @PION_SSL_LIB@ @PION_LOG_LIB@ -L${libdir} -lpion
Cflags: @CPPFLAGS@ -I${includedir}
